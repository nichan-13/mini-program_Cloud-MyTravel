/* pages/message/message.wxss */

.bg-img {
  width: 100vw;
  height: 100vh;
  z-index: -1;
}

.message-content {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.158);
  padding: 50rpx 40rpx;
  box-sizing: border-box;
  overflow: scroll;
}

.message-info {
  width: 100%;
  height: auto;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 4rpx 8rpx 12rpx 0 rgba(112, 110, 110, 0.452);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  color: rgb(138, 159, 204);
  font-size: 38rpx;
  border-top: 1rpx dotted rgb(214, 230, 253);
}

.message-info:first-child {
  border-top: none;
}

.message-text {
  display: block;
  color: rgb(117, 117, 117);
  font-size: 36rpx;
  overflow: hidden;
  word-wrap: break-word;
}